<p id="notice"><%= notice %></p>

<h1>Listing Publication Requests</h1>

<table>
  <thead>
    <tr>
      <th>App id</th>
      <th>App name</th>
      <th>Developer</th>
      <th>Moderator</th>
      <th>Status</th>
      <th>Request date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publication_requests.each do |publication_request| %>
      <tr>
        <% app = Application.find(publication_request.app_id) %>
        <% dev = Person.find(app.developer) %>
        <td><%= publication_request.app_id %></td>
        <td><%= app.app_name %></td>
        <td><%= "#{dev.first_name} #{dev.last_name}" %></td>
        <td><%= publication_request.moderator %></td>
        <td><%= publication_request.status %></td>
        <td><%= publication_request.request_date %></td>
        <td><%= link_to 'Show', publication_request %></td>
        <td><%= link_to 'Edit', edit_publication_request_path(publication_request) %></td>
        <td><%= link_to 'Destroy', publication_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

